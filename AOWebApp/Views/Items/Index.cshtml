@model AOWebApp.ViewModel.ItemSearchViewModel
@* @model IEnumerable<AOWebApp.Models.Item> *@
@* @model IEnumerable<dynamic> *@

@{
    ViewData["Title"] = "Index";
}


<h1 class="h2.Bootstrap heading text-center">Shop Items</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary mb-3">Create New</a>
</p>
<br />
<form method="post">
    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Item Search</span>
        <select name="CategoryId" class="form-control" asp-items="@(ViewBag.CategoryList)">
            <option value="">All categories...</option>
        </select>
        <input type = "text" class="form-control" name="searchText" title="Search by item name. Max 100 chars." 
        value="@ViewData["formValue"]" maxlength="100" placeholder="Type here..." aria-label="Item search Input" aria-describedby="inputGroup-sizing-default" />
    </div>

    <input type="submit" class="btn btn-outline-primary" value="Submit"/>
    <a asp-action="Index" class="btn btn-outline-danger">Reset</a>
</form>
<br/>
<br/>
@if(ViewBag.SearchText != null && Model.Count() > 0)
{   
    <p>
        Your search returned @Model.Count() matching item@(Model.Count() != 1? "s":"")
    </p>

} 
else if (ViewBag.SearchText != null && Model.Count() <= 0)
{
    <p>Showing @Model.Count() items</p>
    <h5 class="text-danger">Ooops, no items matched your search..</h5>
}
<div class="container">
    <div class="row row-cols-3 small">
        @foreach (var item in Model)
        {
            <div class="col card container-sm" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title"><strong>@item.ItemName</strong></h5>
                    <p class="card-text">Category: @item.Category.CategoryName</p>
                    <p class="card-text">Description:@item.ItemDescription</p>
                    <p class="card-text">Cost: @item.ItemCost</p>
            
                    <img src="@item.ItemImage" class="card-img-bottom" alt="@item.ItemName" />
@*                     <p class="card-text">Rate @item.ItemStars from @item.ItemReviews reviews.</p> *@
                <a asp-controller="Items" asp-action="Details" asp-route-id="@item.ItemId" class="btn btn-outline-primary">
                View Item Detail
                </a>
                </div>
            </div>
          }
    </div>

</div>


