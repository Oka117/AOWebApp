@model IEnumerable<AOWebApp.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary mb-3">Create New</a>
</p>

<form method="get" asp-action="Index">
    <div class="input-group input-group-lg mb-3">
        <input type="text" name="SearchText" value="@ViewContext.HttpContext.Request.Query["SearchText"].ToString()" class="form-control me-2" placeholder="Customer name" />
        <select name="Suburb" class="form-select me-2">
            <option value="">All suburbs</option>
            @if (ViewBag.suburbList != null)
            {
                foreach (var s in (System.Collections.Generic.IEnumerable<string>)ViewBag.suburbList)
                {
                    var selectedSuburb = ViewContext.HttpContext.Request.Query["Suburb"].ToString();
                    var isSelected = string.Equals(selectedSuburb, s, System.StringComparison.OrdinalIgnoreCase);
                    <option value="@s" selected="@(isSelected ? "selected" : null)">@s</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
